@model IEnumerable<EMS11.Model.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using EMS11.Common

<table width="1005" border="0" align="center" cellpadding="0" cellspacing="0" background="/images/main1_27.gif">
    <tbody>
        <tr>
            <td height="780" valign="top">
                <div class="main">
                    <div class="leftm" id="l1">
                        <div id="ll1">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tbody>
                                    <tr>
                                        <td height="41" background="/images/main1_27.jpg">&nbsp;</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="leftm2">
                                <table width="100%" border="0" cellpadding="0" cellspacing="0" class="nvt">
                                    <tbody>
                                        <tr>
                                            <td width="12%" height="25" align="left" valign="middle">
                                                <img src="/images/main1_39.jpg" width="14" height="13"></td>
                                            <td width="88%" height="25" valign="middle" class="tttt"><a href="/News/CompanyNews" class="tttt">公司新闻</a></td>
                                        </tr>
                                        <tr>
                                            <td height="25" align="left" valign="middle">
                                                <img src="/images/main1_39.jpg" width="14" height="13"></td>
                                            <td height="25" valign="middle" class="tttt"><a href="/News/HangYeNews" class="tttt">行业新闻 </a></td>
                                        </tr>

                                        <tr>
                                            <td height="15" align="left" valign="middle">&nbsp;</td>
                                            <td height="15" valign="middle">&nbsp;</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                    <div class="right" id="right">
                        <div class="main2" id="l2">
                            <table width="100%" border="0" cellpadding="0" cellspacing="0">
                                <tbody>
                                    <tr>
                                        <td>
                                            <table width="687" border="0" cellspacing="0" cellpadding="0">
                                                <tbody>
                                                    <tr>
                                                        <td width="221" height="24" background="/images/nv.gif">
                                                            <div class="nvv" id="nvv">新闻资讯</div>
                                                        </td>
                                                        <td width="380">&nbsp;</td>
                                                        <td width="86">&nbsp;</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div id="jianjie">
                            <table width="641" border="0" cellpadding="0" cellspacing="0">
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                        <tr>
                                            <td width="85%" height="25" valign="middle" class="new"><span class="STYLE2"><a href="/News/Detils/@item.n_id" class="tt3">@item.n_title</a></span></td>
                                            <td width="15%" height="25" valign="middle" class="tnew"><span class="STYLE2">[@item.add_time.DateTimeFmtYYYYMMDD()]</span></td>
                                        </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    </tbody>
</table>
